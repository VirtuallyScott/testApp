{
    "info": {
        "name": "Container Security API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"access_token\", jsonData.access_token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/x-www-form-urlencoded"
                            }
                        ],
                        "body": {
                            "mode": "urlencoded",
                            "urlencoded": [
                                {
                                    "key": "username",
                                    "value": "{{username}}",
                                    "type": "text"
                                },
                                {
                                    "key": "password",
                                    "value": "{{password}}",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/token",
                            "host": ["{{base_url}}"],
                            "path": ["token"]
                        }
                    }
                },
                {
                    "name": "Get Token Status",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/token/status",
                            "host": ["{{base_url}}"],
                            "path": ["token", "status"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Scans",
            "event": [
                {
                    "listen": "prerequest",
                    "script": {
                        "exec": [
                            "pm.sendRequest({",
                            "    url: pm.environment.get('base_url') + '/token',",
                            "    method: 'POST',",
                            "    header: {",
                            "        'Content-Type': 'application/x-www-form-urlencoded'",
                            "    },",
                            "    body: {",
                            "        mode: 'urlencoded',",
                            "        urlencoded: [",
                            "            {key: 'username', value: pm.environment.get('username')},",
                            "            {key: 'password', value: pm.environment.get('password')}",
                            "        ]",
                            "    }",
                            "}, function (err, res) {",
                            "    if (err) {",
                            "        console.error(err);",
                            "    } else {",
                            "        var jsonData = res.json();",
                            "        pm.environment.set('access_token', jsonData.access_token);",
                            "    }",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "item": [
                {
                    "name": "Upload Scan",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"image_name\": \"nginx\",\n    \"image_tag\": \"latest\",\n    \"image_sha256\": \"sha256:a8758716bb3e600b6c95c58b10c1b49e4dd2f6d98a042cd1886a566e31ad710f\",\n    \"scan_timestamp\": \"2024-01-07T10:00:00+00:00\",\n    \"severity_critical\": 2,\n    \"severity_high\": 5,\n    \"severity_medium\": 10,\n    \"severity_low\": 15,\n    \"raw_results\": {\n        \"SchemaVersion\": 2,\n        \"ArtifactName\": \"nginx:latest\",\n        \"ArtifactType\": \"container_image\",\n        \"Metadata\": {\n            \"ImageID\": \"sha256:a8758716bb3e600b6c95c58b10c1b49e4dd2f6d98a042cd1886a566e31ad710f\",\n            \"DiffIDs\": [\"sha256:b5e479406d8ab67fe6d68e2820baa4cd8297b17fd0196c86cc17c5ca3d9f8030\"]\n        },\n        \"Results\": [\n            {\n                \"Target\": \"nginx:latest (debian 12.1)\",\n                \"Class\": \"os-pkgs\",\n                \"Type\": \"debian\",\n                \"Vulnerabilities\": [\n                    {\n                        \"VulnerabilityID\": \"CVE-2023-1234\",\n                        \"PkgName\": \"openssl\",\n                        \"InstalledVersion\": \"1.1.1t-1\",\n                        \"FixedVersion\": \"1.1.1u-1\",\n                        \"Severity\": \"HIGH\"\n                    }\n                ]\n            }\n        ]\n    }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/scans",
                            "host": ["{{base_url}}"],
                            "path": ["scans"]
                        }
                    }
                },
                {
                    "name": "List Scans",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/scans",
                            "host": ["{{base_url}}"],
                            "path": ["scans"]
                        }
                    }
                },
                {
                    "name": "Get Scan by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/scans/1",
                            "host": ["{{base_url}}"],
                            "path": ["scans", "1"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health Checks",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": ["{{base_url}}"],
                            "path": ["health"]
                        }
                    }
                },
                {
                    "name": "Readiness Check",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/ready",
                            "host": ["{{base_url}}"],
                            "path": ["ready"]
                        }
                    }
                },
                {
                    "name": "Version",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/version",
                            "host": ["{{base_url}}"],
                            "path": ["version"]
                        }
                    }
                }
            ]
        }
    ]
}
